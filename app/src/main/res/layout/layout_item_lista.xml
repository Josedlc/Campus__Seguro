<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="90dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="3dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnRegistrar"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/negativebuttonshape"
                android:fontFamily="@font/roboto_bold"
                android:text="Registrar"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="25dp"
                android:layout_height="33dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="60dp"
                card_view:layout_constraintBottom_toTopOf="@+id/imageView4"
                card_view:layout_constraintHorizontal_chainStyle="packed"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/ic_clock" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="25dp"
                android:layout_height="33dp"
                android:layout_marginStart="112dp"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/btnRegistrar"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView4"
                card_view:layout_constraintVertical_bias="0.0"
                card_view:srcCompat="@drawable/ic_pin" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="33dp"
                android:layout_marginStart="115dp"
                card_view:layout_constraintBottom_toTopOf="@+id/imageView8"
                card_view:layout_constraintHorizontal_chainStyle="packed"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView7"
                card_view:srcCompat="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/txtDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/roboto_thin"
                android:text="Hoy"
                android:textColor="#524F4F"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/txtLugar"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/imageView4"
                card_view:layout_constraintTop_toBottomOf="@+id/txtHora" />

            <TextView
                android:id="@+id/txtHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/roboto_thin"
                android:text="11:11"
                android:textColor="#524F4F"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/txtDia"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.02"
                card_view:layout_constraintStart_toEndOf="@+id/imageView7"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_thin"
                android:text="Entrada 1"
                android:textColor="#524F4F"
                android:textSize="18sp"
                card_view:layout_constraintBottom_toTopOf="@+id/btnRegistrar"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.027"
                card_view:layout_constraintStart_toEndOf="@+id/imageView8"
                card_view:layout_constraintTop_toBottomOf="@+id/txtDia"
                card_view:layout_constraintVertical_bias="0.064" />

            <ImageView
                android:id="@+id/btnCerrar"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/ic_remove" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="3dp"
        android:src="@drawable/itsonseguro"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>